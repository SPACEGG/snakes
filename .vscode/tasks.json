{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python Run",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/python/main.py"
            ],
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "PYTHONPATH": "${workspaceFolder}/python"
                },
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true               
            }
        }
    ]
}